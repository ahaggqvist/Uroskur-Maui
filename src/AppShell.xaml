<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Uroskur.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Uroskur.Pages">

    <FlyoutItem Route="RoutesPage" Title="Routes">
        <ShellContent Shell.ForegroundColor="White"
                      Shell.BackgroundColor="#FC4C02"
                      Shell.NavBarIsVisible="True"
                      Shell.TabBarIsVisible="False"
                      ContentTemplate="{DataTemplate local:RoutesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent Shell.ForegroundColor="White"
                      Shell.BackgroundColor="#FC4C02"
                      Shell.NavBarIsVisible="True"
                      Route="SettingsPage"
                      ContentTemplate="{DataTemplate local:PreferencesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="About">
        <ShellContent Shell.ForegroundColor="White"
                      Shell.BackgroundColor="#FC4C02"
                      Shell.NavBarIsVisible="True"
                      Route="AboutPage"
                      ContentTemplate="{DataTemplate local:AboutPage}" />
    </FlyoutItem>
</Shell>