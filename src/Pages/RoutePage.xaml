<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Uroskur.ViewModels"
             xmlns:converter="clr-namespace:Uroskur.Converters"
             x:Class="Uroskur.Pages.RoutePage"
             x:DataType="viewmodel:RouteViewModel">

    <Shell.TitleView>
        <Label Margin="5,12,5,12" Text="{Binding Routes.Name}" TextColor="White"
               FontSize="20" FontFamily="RobotoMedium" />
    </Shell.TitleView>

    <ContentPage.Resources>
        <converter:StringToDateTimeConverter x:Key="StringToDateTime" />
        <converter:MeterToKilometerConverter x:Key="MeterToKilometer" />
    </ContentPage.Resources>

    <Grid Margin="8,0,5,0" RowDefinitions="*">
        <ScrollView VerticalOptions="Start">
            <VerticalStackLayout>
                <Label Text="{Binding Routes.Name}" FontSize="16"
                       FontFamily="RobotoMedium" Margin="0,5,0,0" />
                <Grid ColumnDefinitions="12,Auto" Margin="5,5,0,0">
                    <Image Source="{Binding Routes.RouteTypeImage}" WidthRequest="12"
                           HeightRequest="12" />
                    <Label Grid.Column="1" Padding="5,0,0,0"
                           FontFamily="RobotoLight" FontSize="10"
                           Text="{Binding Routes.CreatedAt, StringFormat='{0:ddd, d MMM yyyy}', Converter={StaticResource StringToDateTime}}" />
                </Grid>
                <Grid RowDefinitions="25,25" ColumnDefinitions="Auto,Auto,Auto,Auto,*">
                    <Label Padding="0,10,0,0"
                           FontSize="9"
                           Text="Distance" FontFamily="RobotoLight" TextTransform="Uppercase" />
                    <Label Grid.Column="1" Padding="10,10,0,0"
                           FontSize="9"
                           Text="Elev. Gain" FontFamily="RobotoLight" TextTransform="Uppercase" />
                    <Label Grid.Column="2" Padding="10,10,0,0"
                           FontSize="9"
                           Text="Est. Moving Time" FontFamily="RobotoLight" TextTransform="Uppercase" />
                    <Label Grid.Row="1" Padding="0,0,0,0"
                           FontSize="13" FontFamily="RobotoRegular"
                           Text="{Binding Routes.Distance, StringFormat='{0:0.00} km', Converter={StaticResource MeterToKilometer}}" />
                    <Label Grid.Row="1" Grid.Column="1" Padding="10,0,0,0"
                           FontSize="13" FontFamily="RobotoRegular"
                           Text="{Binding Routes.ElevationGain, StringFormat='{0:0} m'}" />
                    <Label Grid.Row="1" Grid.Column="2" Padding="10,0,0,0"
                           FontSize="13" FontFamily="RobotoRegular"
                           Text="{Binding Routes.EstimatedMovingTimeFormatted}" />
                </Grid>
                <HorizontalStackLayout Padding="0,0,0,10">
                    <Image Aspect="AspectFill" WidthRequest="385" HeightRequest="148">
                        <Image.Source>
                            <UriImageSource Uri="{Binding Routes.MapUrls.RetinaUrl}"
                                            CacheValidity="10:00:00.0" />
                        </Image.Source>
                    </Image>
                </HorizontalStackLayout>
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
                      ColumnSpacing="5" RowSpacing="0" Margin="0,0,0,10">
                    <Label Grid.Row="0" Grid.Column="2" Text="Day" FontFamily="RobotoLight"
                           Margin="0,5,0,5" />

                    <Image Grid.Row="1" Source="calendar.png" WidthRequest="13"
                           HeightRequest="13" />
                    <Picker Grid.Row="1" Grid.Column="1" x:Name="StartDatePicker" SelectedItem="{Binding Day}"
                            FontSize="13">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Today</x:String>
                                <x:String>Tomorrow</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Label Grid.Row="2" Grid.Column="2" Text="Time" FontFamily="RobotoLight"
                           Margin="0,10,0,5" />

                    <Image Grid.Row="3" Source="clock.png" WidthRequest="13"
                           HeightRequest="13" />
                    <TimePicker Grid.Row="3" Grid.Column="3" x:Name="StartTimePicker" Format="HH:mm"
                                Time="{Binding Time}" FontSize="13" />

                    <Label Grid.Row="4" Grid.Column="2" Text="Speed" FontFamily="RobotoLight"
                           Margin="0,10,0,5" />

                    <Image Grid.Row="5" Source="gauge.png" WidthRequest="13"
                           HeightRequest="13" />
                    <Picker Grid.Row="5" Grid.Column="1" x:Name="AverageSpeedPicker"
                            SelectedItem="{Binding Speed}" FontSize="13">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>10</x:String>
                                <x:String>20</x:String>
                                <x:String>30</x:String>
                                <x:String>40</x:String>
                                <x:String>50</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Label Grid.Row="6" Grid.Column="2" Text="Weather forecast provider" FontFamily="RobotoLight"
                           Margin="0,10,0,5" />
                    <Image Grid.Row="7" Source="cloud_rain.png" WidthRequest="13"
                           HeightRequest="13" />

                    <Picker Grid.Row="7" Grid.Column="1" x:Name="WeatherForecastProviderPicker"
                            SelectedItem="{Binding WeatherForecastProviderName}" FontSize="13">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Yr</x:String>
                                <x:String>OpenWeather</x:String>
                                <x:String>SMHI</x:String>
                                <x:String>OpenWeather/Yr/SMHI</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Grid>
                <Button Text="Forecast Route" Command="{Binding NavigateToCommand}" />
            </VerticalStackLayout>
        </ScrollView>
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
    </Grid>
</ContentPage>